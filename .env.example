# Discord bot token (Discord Developer Portal -> Your App -> Bot)
DISCORD_TOKEN=

# Required for registering /join slash command (Application ID in Developer Portal)
DISCORD_APPLICATION_ID=
# Optional: host Discord user ID (for director trigger phrases and auto-join)
# DISCORD_HOST_USER_ID=
# Optional: set to true/1 to have the bot auto-join the voice channel the host is in
# DISCORD_AUTO_JOIN_HOST_CHANNEL=false

# Moddit director API (defaults shown)
# MODDIT_API_KEY=          # Required for all Moddit API calls
MODDIT_API_URL=https://api.moddit.io
MODDIT_SESSION_ID=1234
MODDIT_CONTEXT_MESSAGES=20
MODDIT_SUGGESTION_INTERVAL_SEC=30
# MODERATOR_MOD_ID=        # Optional; default mod for "speak as" when a voice has no modId

# Topic tracker: detect topic shifts and write logs/current-topic.txt for OBS
# TOPIC_MOD_ID=d90f8d0e-0154-46ca-a1cb-aa7db01a6d11
# TOPIC_INTERVAL_SEC=45
# TOPIC_MIN_NEW_MESSAGES=5  # Only run topic check when this many new messages since last check
# TOPIC_ENABLED=false      # Set to false to disable topic tracking

# Dashboard (default port 8765)
# DASHBOARD_PORT=8765
# Set to false to disable auto-opening the dashboard in your browser on startup
# DASHBOARD_OPEN_ON_START=false

# Deepgram API key for speech-to-text (get one at deepgram.com)
DEEPGRAM_API_KEY=

# Optional: skip very short utterances (ms)
DEEPGRAM_MIN_AUDIO_MS=500

# Optional: run claim extraction when a log line is longer than this many chars (0 = disabled)
# CLAIM_EXTRACT_MIN_LINE_LENGTH=20

# Optional: Tavily API key for "with search" fact-check (get one at tavily.com)
TAVILY_API_KEY=

# YouTube Data API v3 key for "Pull video" search (Google Cloud Console, enable YouTube Data API v3)
# YOUTUBE_API_KEY=

# Optional: ElevenLabs TTS — bot speaks in voice (get key at elevenlabs.io)
ELEVENLABS_API_KEY=
# Optional: ElevenLabs voice ID (defaults to Rachel if unset)
ELEVENLABS_VOICE_ID=
# Optional: full path to ffmpeg executable if not on PATH (e.g. C:\ffmpeg\bin\ffmpeg.exe)
FFMPEG_PATH=

# Optional: open video links in another browser (e.g. firefox, "google chrome")
# When set, Pull video links and auto-open first open in this browser instead of the dashboard window.
# OPEN_VIDEO_IN_BROWSER=firefox

# Optional: OBS WebSocket for lower-third trigger (Tools → WebSocket Server Settings in OBS)
# OBS_WS_URL=ws://192.168.0.106:4455
# OBS_WS_PASSWORD=your_password
# OBS_LOWER_THIRD_SOURCE_NAME=lower-third
# OBS_LOWER_THIRD_BASE_URL=https://cdpn.io/pen/debug/mKbQGa/e70d51e92a36ff6eddedd781368ae604
